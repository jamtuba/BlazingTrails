@inject AppState _appState

@if (_appState.FavoriteTrailsState.IsFavorite(Trail))
{
        <button class="btn btn-outline-primary ml-1" title="Favorite" @onclick="@(() => _appState.FavoriteTrailsState.RemoveFavorite(Trail))">
            <i class="bi bi-heart-fill"></i>
        </button>
}
else
{
        <button class="btn btn-outline-primary ml-1" title="Favorite" @onclick="@(() => _appState.FavoriteTrailsState.AddFavorite(Trail))">
            <i class="bi bi-heart"></i>
        </button>
}

@code {
    [Parameter, EditorRequired]
    public Trail Trail { get; set; } = default!;
}
